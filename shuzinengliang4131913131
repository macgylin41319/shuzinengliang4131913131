<script>
    // --- 核心数据配置 (完全依照你的文本) ---

    // 1. 单数定义：八卦、五行、六亲
    const SINGLE_DATA = {
        '1': { gua: '坎为水', five: '水', cls: 'bg-water', rel: '中男' },
        '2': { gua: '坤为土', five: '土', cls: 'bg-earth', rel: '老母' },
        '3': { gua: '震为木', five: '木', cls: 'bg-wood',  rel: '长男' },
        '4': { gua: '巽为木', five: '木', cls: 'bg-wood',  rel: '长女' },
        '5': { gua: '中央土', five: '土', cls: 'bg-earth', rel: '戊己' },
        '6': { gua: '乾为金', five: '金', cls: 'bg-metal', rel: '老父' },
        '7': { gua: '兑为金', five: '金', cls: 'bg-metal', rel: '少女' },
        '8': { gua: '艮为土', five: '土', cls: 'bg-earth', rel: '少男' },
        '9': { gua: '离为火', five: '火', cls: 'bg-fire',  rel: '中女' },
        '0': { gua: '中央土', five: '土', cls: 'bg-earth', rel: '戊己' }
    };

    // 2. 双数数组定义 (九星关系)
    // 吉：天医、生气、延年、伏位(平吉)
    // 凶：绝命、五鬼、六煞、祸害
    const PAIR_DATA = {
        // 天医 (吉)
        '13':{n:'天医',t:'吉',l:1}, '31':{n:'天医',t:'吉',l:1}, 
        '68':{n:'天医',t:'吉',l:2}, '86':{n:'天医',t:'吉',l:2},
        '49':{n:'天医',t:'吉',l:3}, '94':{n:'天医',t:'吉',l:3}, 
        '27':{n:'天医',t:'吉',l:4}, '72':{n:'天医',t:'吉',l:4},
        
        // 生气 (吉)
        '14':{n:'生气',t:'吉',l:1}, '41':{n:'生气',t:'吉',l:1}, 
        '67':{n:'生气',t:'吉',l:2}, '76':{n:'生气',t:'吉',l:2},
        '39':{n:'生气',t:'吉',l:3}, '93':{n:'生气',t:'吉',l:3}, 
        '28':{n:'生气',t:'吉',l:4}, '82':{n:'生气',t:'吉',l:4},

        // 延年 (吉)
        '19':{n:'延年',t:'吉',l:1}, '91':{n:'延年',t:'吉',l:1}, 
        '78':{n:'延年',t:'吉',l:2}, '87':{n:'延年',t:'吉',l:2},
        '34':{n:'延年',t:'吉',l:3}, '43':{n:'延年',t:'吉',l:3}, 
        '26':{n:'延年',t:'吉',l:4}, '62':{n:'延年',t:'吉',l:4},

        // 伏位 (平/吉)
        '11':{n:'伏位',t:'平',l:1}, '22':{n:'伏位',t:'平',l:1}, 
        '33':{n:'伏位',t:'平',l:1}, '44':{n:'伏位',t:'平',l:1},
        '55':{n:'伏位',t:'平',l:1}, '66':{n:'伏位',t:'平',l:1}, 
        '77':{n:'伏位',t:'平',l:1}, '88':{n:'伏位',t:'平',l:1},
        '99':{n:'伏位',t:'平',l:1}, '00':{n:'伏位',t:'平',l:1},

        // 绝命 (凶)
        '12':{n:'绝命',t:'凶',l:1}, '21':{n:'绝命',t:'凶',l:1}, 
        '69':{n:'绝命',t:'凶',l:2}, '96':{n:'绝命',t:'凶',l:2},
        '48':{n:'绝命',t:'凶',l:3}, '84':{n:'绝命',t:'凶',l:3}, 
        '37':{n:'绝命',t:'凶',l:4}, '73':{n:'绝命',t:'凶',l:4},

        // 五鬼 (凶)
        '18':{n:'五鬼',t:'凶',l:1}, '81':{n:'五鬼',t:'凶',l:1}, 
        '79':{n:'五鬼',t:'凶',l:2}, '97':{n:'五鬼',t:'凶',l:2},
        '36':{n:'五鬼',t:'凶',l:3}, '63':{n:'五鬼',t:'凶',l:3}, 
        '24':{n:'五鬼',t:'凶',l:4}, '42':{n:'五鬼',t:'凶',l:4},

        // 六煞 (凶)
        '16':{n:'六煞',t:'凶',l:1}, '61':{n:'六煞',t:'凶',l:1}, 
        '47':{n:'六煞',t:'凶',l:2}, '74':{n:'六煞',t:'凶',l:2},
        '38':{n:'六煞',t:'凶',l:3}, '83':{n:'六煞',t:'凶',l:3}, 
        '29':{n:'六煞',t:'凶',l:4}, '92':{n:'六煞',t:'凶',l:4},

        // 祸害 (凶)
        '17':{n:'祸害',t:'凶',l:1}, '71':{n:'祸害',t:'凶',l:1}, 
        '89':{n:'祸害',t:'凶',l:2}, '98':{n:'祸害',t:'凶',l:2},
        '46':{n:'祸害',t:'凶',l:3}, '64':{n:'祸害',t:'凶',l:3}, 
        '23':{n:'祸害',t:'凶',l:4}, '32':{n:'祸害',t:'凶',l:4}
    };

    const LETTER_MAP = {'A':'01','B':'02','C':'03','D':'04','E':'05','F':'06','G':'07','H':'08','I':'09','J':'10','K':'11','L':'12','M':'13','N':'14','O':'15','P':'16','Q':'17','R':'18','S':'19','T':'20','U':'21','V':'22','W':'23','X':'24','Y':'25','Z':'26'};

    function analyze() {
        let raw = document.getElementById('mainInput').value.toUpperCase().trim();
        if(!raw) return;

        // 1. 转数字 (字母转数字)
        let processed = '';
        for(let char of raw) {
            if(/[A-Z]/.test(char)) processed += LETTER_MAP[char];
            else if(/[0-9]/.test(char)) processed += char;
        }

        document.getElementById('result-area').classList.remove('hidden');

        // 2. 渲染：单数八卦卡片 (1-9)
        const grid = document.getElementById('single-digit-area');
        grid.innerHTML = '';
        
        for(let char of processed) {
            const d = SINGLE_DATA[char];
            if(d) {
                const el = document.createElement('div');
                el.className = 'gua-card';
                el.innerHTML = `
                    <div class="gc-num">${char}</div>
                    <div class="gc-name">${d.gua}</div>
                    <div class="gc-box ${d.cls}">${d.five}</div>
                    <div class="gc-rel">${d.rel}</div>
                `;
                grid.appendChild(el);
            }
        }

        // 3. 渲染：数组吉凶
        const list = document.getElementById('array-list');
        list.innerHTML = '';
        let score = 0;

        for(let i=0; i<processed.length-1; i++) {
            let pair = processed[i] + processed[i+1];
            // 简单处理：如果0在中间，通常看作伏位或桥梁，这里为展示简单，我们只匹配字典
            // 你的文本中伏位包括：11,22..00。所以直接匹配即可。
            // 对于夹0的情况(如103)，高阶算法通常是103->11,33。
            // 这里为了符合"两两组合"的直观展示，如果字典里有就显示。
            
            let info = PAIR_DATA[pair];
            
            if(info) {
                const row = document.createElement('div');
                let typeClass = info.t === '吉' ? 'ji' : (info.t === '凶' ? 'xiong' : 'ping');
                
                row.className = `list-row ${typeClass}`;
                row.innerHTML = `
                    <div class="lr-pair">${pair}</div>
                    <div style="text-align:right;">
                        <div class="lr-name">${info.n}</div>
                        <div class="lr-desc">${info.l}级能量 · ${info.t}</div>
                    </div>
                `;
                list.appendChild(row);

                // 算分
                if(info.t === '吉') score += 10;
                else if(info.t === '凶') score -= 10;
                else score += 2;
            }
        }

        // 4. 总分颜色
        const sVal = document.getElementById('total-score');
        const sCom = document.getElementById('score-comment');
        sVal.innerText = score;
        
        if(score > 0) {
            sVal.style.color = '#e74c3c'; // 红
            sCom.innerText = "吉星高照 · 运势顺畅";
        } else {
            sVal.style.color = '#3498db'; // 蓝
            sCom.innerText = "凶星干扰 · 建议调整";
        }
    }
</script>

</body>
